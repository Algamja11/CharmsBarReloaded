<Window x:Class="CharmsBarReloaded.CharmsBar.CharmsBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharmsBarReloaded.CharmsBar"
        mc:Ignorable="d"
        Title="Bar" MinWidth="86" Top="0" Topmost="True" SnapsToDevicePixels="True"
        ResizeMode="NoResize" ScrollViewer.VerticalScrollBarVisibility="Disabled" SizeToContent="Width"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <StackPanel x:Name="charmsStack" VerticalAlignment="Center">
            <Grid Height="86" VerticalAlignment="Center">
                <TextBlock Height="86" Width="86"/>
            </Grid>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
